<div class="modal-background @(IsOpen ? "is-open" : "")" @onclick="CloseModal">
    <div class="modal-container">
        <div class="modal-header">
            <span class="modal-close-btn" @onclick="CloseModal">&times;</span>
        </div>
        <div class="modal-content">
            <div class="modal-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h2 class="modal-title">Atenção!</h2>
            <p class="modal-message">
                Por favor, preencha todos os campos antes de calcular o seu IMC.
            </p>
            <div class="modal-actions">
                <button class="btn-primary" @onclick="CloseModal">Entendi</button>
            </div>
        </div>
    </div>
</div>

@code {
    public bool IsOpen { get; set; } = false;

    public void ShowModal()
    {
        IsOpen = true;
        StateHasChanged();
    }

    public void CloseModal()
    {
        IsOpen = false;
        StateHasChanged();
    }
}